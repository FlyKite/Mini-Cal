<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bglayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#5baaff"
    android:orientation="horizontal" >
    
    <LinearLayout
        android:id="@+id/topbar"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@drawable/topbarland"
        android:orientation="vertical" >
            
            <TextView
            	android:id="@+id/bartitle"
            	android:layout_width="fill_parent"
            	android:layout_height="fill_parent"
            	android:textColor="#ffffff"
            	android:paddingTop="32dip"
            	android:textSize="18sp"
            	android:gravity="center_horizontal"
            	android:text="@string/app_nameLand" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >
        
        <EditText
        	android:id="@+id/display"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:textSize="38sp"
        	android:background="#898989"
        	android:focusable="false"
        	android:singleLine="true"
        	android:textColor="#404000"
        	android:gravity="end"
        	android:text="0" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TableRow >

                <Button
                    android:id="@+id/buttonsin"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:text="sin" />
                
                <Button
                    android:id="@+id/buttoncos"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:text="cos" />
                
                <Button
                    android:id="@+id/buttontan"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:text="tan" />
                
                <Button
                    android:id="@+id/buttonjc"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:text="n!" />

            </TableRow>
            
            <TableRow >

                <Button
                    android:id="@+id/buttonln"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:text="ln" />
                
                <Button
                    android:id="@+id/buttonlog"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:text="log" />
                
                <Button
                    android:id="@+id/buttonx62"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:text="x²" />
                
                <Button
                    android:id="@+id/buttonx6y"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:text="x^y" />

            </TableRow>
            
            <TableRow >

                <Button
                    android:id="@+id/buttonexp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:text="exp" />
                
                <Button
                    android:id="@+id/buttonpi"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:text="π" />
                
                <Button
                    android:id="@+id/buttongh"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:text="√" />
                
                <Button
                    android:id="@+id/buttonbh"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:text="％" />

            </TableRow>

        </TableLayout>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:id="@+id/number7"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="7" />

            <Button
                android:id="@+id/number4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="4" />

            <Button
                android:id="@+id/number1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="1" />

            <Button
                android:id="@+id/number0"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="0" />

            <Button
                android:id="@+id/buttonAC"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="C" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:id="@+id/number8"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="8" />

            <Button
                android:id="@+id/number5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="5" />

            <Button
                android:id="@+id/number2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="2" />

            <Button
                android:id="@+id/number10"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="." />
            
            <Button
                android:id="@+id/buttonBack"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="←" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:id="@+id/number9"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="9" />

            <Button
                android:id="@+id/number6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="6" />

            <Button
                android:id="@+id/number3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="3" />

            <Button
                android:id="@+id/button0"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="=" />
            
            <Button
                android:id="@+id/buttonLK"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="(" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="+" />

            <Button
                android:id="@+id/button2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="-" />

            <Button
                android:id="@+id/button3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="×" />

            <Button
                android:id="@+id/button4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="÷" />
            
            <Button
                android:id="@+id/buttonRK"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text=")" />
            
        </LinearLayout>
        
    </LinearLayout>
    
</LinearLayout>