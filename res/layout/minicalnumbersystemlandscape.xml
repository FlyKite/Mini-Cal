        	    android:textSize="28dip" />

        	<Button
        	    android:id="@+id/changenumberc"
        	    android:layout_width="fill_parent"
        	    android:layout_height="wrap_content"
        	    android:layout_weight="1"
        	    android:text="C"
        	    android:textSize="28dip" />
        
        	<Button 
            	android:id="@+id/changebuttonhex"
            	android:layout_width="fill_parent"
            	android:layout_height="wrap_content"
            	android:layout_weight="1"
            	android:textSize="16dip"
        	    android:text="Hex"/>
    	</LinearLayout>
    </LinearLayout>

</LinearLayout>
        