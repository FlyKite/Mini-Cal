            	android:layout_height="wrap_content"
            	android:layout_weight="1"
            	android:textSize="28dip"
            	android:text="3"/>

        	<Button
            	android:id="@+id/changenumberd"
            	android:layout_width="fill_parent"
            	android:layout_height="wrap_content"
            	android:layout_weight="1"
            	android:text="D"
            	android:textSize="28dip" />
        
        	<Button 
            	android:id="@+id/changebuttondec"
            	android:layout_width="fill_parent"
            	android:layout_height="wrap_content"
            	android:layout_weight="1"
            	android:textSize="16dip"
            	android:text="Dec"/>
