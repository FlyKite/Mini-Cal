            		android:layout_width="fill_parent"
            		android:layout_height="wrap_content" />
        	
        		<TextView 
            		android:id="@+id/changefromcnidis"
            		android:layout_width="fill_parent"
            		android:layout_height="wrap_content" />
        	
        		<TextView 
        		    android:id="@+id/changeshownum"
        		    android:layout_width="fill_parent"
        		    android:layout_height="wrap_content" />
            
        	</LinearLayout>
    	</ScrollView>
        
